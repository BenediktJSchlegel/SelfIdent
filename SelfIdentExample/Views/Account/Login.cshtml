@model SelfIdentExample.ViewModels.LoginViewModel

<style>
	input[type=text], select {
		width: 100%;
		padding: 12px 20px;
		margin: 8px 0;
		display: inline-block;
		border: 1px solid #ccc;
		border-radius: 4px;
		box-sizing: border-box;
	}

	input[type=submit] {
		width: 100%;
		background-color: #AA6B39;
		color: white;
		padding: 14px 20px;
		margin: 8px 0;
		border: none;
		border-radius: 4px;
		cursor: pointer;
	}

		input[type=submit]:hover {
			background-color: #AA6B39;
		}

</style>

@using (Html.BeginForm("LoginUser", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
	@Html.LabelFor(m => m.Email)
	@Html.TextBoxFor(m => m.Email)
	@Html.LabelFor(m => m.Password)
	@Html.TextBoxFor(m => m.Password)

	<input value="Login" type="submit" />
}
